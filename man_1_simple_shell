#include <stdio.h>
#include <stdlib.h>
#include <unistd.h>
#include <string.h>

#define MAX_CMD_LEN 1024

/**
 * main - Entry point of the shell program.
 *
 * Return: Always 0 (Success)
 */
int main(void)
{
char *command = NULL;
size_t len = 0;
ssize_t read;

while (1)
{
printf("$ ");
read = getline(&command, &len, stdin);

if (read == -1)
{
free(command);
exit(0);
}

command[strcspn(command, "\n")] = 0;

if (fork() == 0)
{
char *args[] = {command, NULL};
if (execvp(args[0], args) == -1)
{
perror("Error");
}
exit(1);
}
else
{
wait(NULL);
}
}

free(command);
return (0);
}
